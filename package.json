{
  "name": "cornerstone",
  "version": "1.0.0",
  "description": "A lightweight starter theme for Wordpress development.",
  "scripts": {
    "css": "node-sass --output-style compressed --include-path scss style.scss style.css",
    "watch": "nodemon -e scss,js --ignore js/dist/ --ignore js/lib/ -x \"npm run css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://haydenbarnett@github.com/HaydenBarnett/cornerstone.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HaydenBarnett/cornerstone/issues"
  },
  "homepage": "https://github.com/HaydenBarnett/cornerstone#readme",
  "dependencies": {
    "node-sass": "^4.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "nodemon": "^2.0.4"
  }
}
